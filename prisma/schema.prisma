generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Articles {
  id          Int      @id @default(autoincrement())
  name        String
  price       Float
  type        String
  type_color  String?
  image       String?
  image_alt   String?

  options Options[]
}

model Options {
  id          Int      @id @default(autoincrement())
  name        String
  price       Float
  article     Articles   @relation(fields: [article_id], references: [id])
  article_id  Int 
}

model Clients {
  id          Int      @id @default(autoincrement())
  firstname   String
  lastname    String
  address     String
  npa         Int
  phone       String
  email       String
  locality    String
}

model Orders {
  id                Int      @id @default(autoincrement())
  date              DateTime
  comment           String

  firstname         String
  lastname          String
  address           String
  npa               Int
  locality          String

  shipping_method   String
  shipping_price    Float
  shipping_date     DateTime

  billed            Boolean @default(false)
  billed_method     String
  billed_date       DateTime?

  price_total       Float

  order_lines     Order_line[]
}

model Order_line {
  id                Int       @id @default(autoincrement())
  id_order          Int       @unique

  article           String
  article_price     Float
  article_quantity  Int

  options           String
  options_price     Float
  options_quantity  Int

  order           Orders  @relation(fields: [id_order], references: [id])
}